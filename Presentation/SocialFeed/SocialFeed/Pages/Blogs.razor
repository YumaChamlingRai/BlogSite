@page "/blogs/{blogId:int}"

@using System.Text.Json
@using Bislerium.Models.Request
@using Bislerium.Models.Response
@using Bislerium.Services

@inject APIService APIService

<PageTitle>Blogs Details</PageTitle>

@if (BlogDetails != null)
{
    if (!string.IsNullOrEmpty(Message))
    {
        <MessageLayout Type="@Type" Message="@Message" />
    }
    <div class="social-feed">
        <div class="card">
            <div class="card-body pb-1">
                <div class="d-flex">
                    @{
                    var bloggerImage = $"https://localhost:44340/{BlogDetails.BloggerImage}";
                    }
                    <img class="me-2 rounded" src="@bloggerImage" alt="Generic placeholder image" height="32">
                    <div class="w-100">
                        <h5 class="m-0">
                            <div class="d-flex align-items-center mb-3">
                                <div>
                                    <h5 class="m-0">@BlogDetails.BloggerName</h5>
                                    <p class="text-muted mb-1"><small>@BlogDetails.Location - @BlogDetails.UploadedTimePeriod</small></p>
                                    <p class="mb-0">
                                        <span class="fw-bold">Feeling:</span> @BlogDetails.Reaction
                                        @if (BlogDetails.IsEdited)
                                        {
                                            <span class="text-muted">(Updated)</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </h5>

                        <p class="text-muted"><small><span class="mx-1">⚬</span> <span>@BlogDetails.PopularityPoints Points</span></small></p>
                    </div>
                </div>
                <hr class="m-0">
                <div class="text-center text-white fw-normal fs-3 my-3 p-3 rounded shadow-lg" style="background-color: #1F2B37;">
                    <i class="mdi "></i>
                    @BlogDetails.Title
                </div>
                <div class="my-3">
                    <p>"@BlogDetails.Body"</p>
                    @if (BlogDetails.Images is { Count: > 0 })
                    {
                    <div class="row card-images">
                        @switch (BlogDetails.Images.Count)
                        {
                        case 1:
                        <div class="col-12">
                            <img src="https://localhost:44340/@BlogDetails.Images[0]" alt="post-img" class="rounded img-fluid w-100">
                        </div>
                        break;

                        case 2:
                        <div class="col-sm-6">
                            <img src="https://localhost:44340/@BlogDetails.Images[0]" alt="post-img" class="rounded img-fluid w-100">
                        </div>
                        <div class="col-sm-6">
                            <img src="https://localhost:44340/@BlogDetails.Images[1]" alt="post-img" class="rounded img-fluid w-100">
                        </div>
                        break;

                        case 3:
                        <div class="col-sm-7">
                            <img src="https://localhost:44340/@BlogDetails.Images[0]" alt="post-img" class="rounded img-fluid w-100 h-100">
                        </div>
                        <div class="col-sm-5">
                            <img src="https://localhost:44340/@BlogDetails.Images[1]" alt="post-img" class="rounded img-fluid w-100 mb-2">
                            <img src="https://localhost:44340/@BlogDetails.Images[2]" alt="post-img" class="rounded img-fluid w-100">
                        </div>
                        break;

                        case 4:
                        <div class="col-sm-6">
                            <img src="https://localhost:44340/@BlogDetails.Images[0]" alt="post-img" class="rounded img-fluid w-100 mb-2">
                        </div>
                        <div class="col-sm-6">
                            <img src="https://localhost:44340/@BlogDetails.Images[1]" alt="post-img" class="rounded img-fluid w-100 mb-2">
                        </div>
                        <div class="col-sm-6">
                            <img src="https://localhost:44340/@BlogDetails.Images[2]" alt="post-img" class="rounded img-fluid w-100">
                        </div>
                        <div class="col-sm-6">
                            <img src="https://localhost:44340/@BlogDetails.Images[3]" alt="post-img" class="rounded img-fluid w-100">
                        </div>
                        break;

                        case 5:
                        <div class="col-sm-4">
                            <img src="https://localhost:44340/@BlogDetails.Images[0]" alt="post-img" class="rounded img-fluid w-100 mb-2">
                        </div>
                        <div class="col-sm-4">
                            <img src="https://localhost:44340/@BlogDetails.Images[1]" alt="post-img" class="rounded img-fluid w-100 mb-2">
                        </div>
                        <div class="col-sm-4">
                            <img src="https://localhost:44340/@BlogDetails.Images[2]" alt="post-img" class="rounded img-fluid w-100 mb-2">
                        </div>
                        <div class="col-sm-6">
                            <img src="https://localhost:44340/@BlogDetails.Images[3]" alt="post-img" class="rounded img-fluid w-100">
                        </div>
                        <div class="col-sm-6">
                            <img src="https://localhost:44340/@BlogDetails.Images[4]" alt="post-img" class="rounded img-fluid w-100">
                        </div>
                        break;
                        }
                    </div>
                    }
                </div>
                <hr class="m-0">
                <div class="my-1">
                    <div class="row">
                        <div class="col-auto">
                            @if (BlogDetails.IsUpVotedByUser)
                            {
                            <i class="mdi mdi-arrow-up-bold text-muted"></i>
                            }
                            else
                            {
                            if (IsLoggedIn)
                            {
                            <a @onclick="() => UpVoteDownVoteBlog(1)" class="btn btn-sm btn-link text-muted">
                                <i class="mdi mdi-arrow-up-bold-outline text-muted"></i>
                            </a>
                            }
                            else
                            {
                            <a class="btn btn-sm btn-link text-muted">
                                <i class="mdi mdi-arrow-up-bold-outline text-muted"></i>
                            </a>
                            }
                            }
                            @BlogDetails.UpVotes
                        </div>
                        <div class="col-auto">
                            @if (BlogDetails.IsDownVotedByUser)
                            {
                            <i class="mdi mdi-arrow-down-bold text-muted"></i>
                            }
                            else
                            {
                            if (IsLoggedIn)
                            {
                            <a @onclick="() => UpVoteDownVoteBlog(2)" class="btn btn-sm btn-link text-muted">
                                <i class="mdi mdi-arrow-down-bold-outline text-muted"></i>
                            </a>
                            }
                            else
                            {
                            <a class="btn btn-sm btn-link text-muted">
                                <i class="mdi mdi-arrow-down-bold-outline text-muted"></i>
                            </a>
                            }
                            }
                            @BlogDetails.DownVotes
                        </div>
                        <div class="col">
                            @if (IsLoggedIn)
                            {
                            <a @onclick="OpenCommentModalForBlog" class="btn btn-sm btn-link text-muted">
                                <i class="uil uil-comments-alt"></i> @BlogDetails.CommentCount Comments
                            </a>
                            }
                            else
                            {
                            <a class="btn btn-sm btn-link text-muted">
                                <i class="uil uil-comments-alt"></i> @BlogDetails.CommentCount Comments
                            </a>
                            }
                        </div>
                    </div>
                </div>
                <hr class="m-0">
                <div class="mt-3">
                    <div>
                        @if (IsCommentModalOpenForBlog)
                        {
                        <form @onsubmit="CommentForBlog">
                            <p class="note my-3">You are uploading a comment on a blog.</p>
                            <div class="mb-3">
                                <label class="form-label">&nbsp;Comment Description</label>
                                <textarea type="text" class="form-control" @bind="_reaction.Comment" placeholder="Enter the your comment and description"></textarea>
                            </div>
                            <div class="btn-wrapper text-end mb-2">
                                <button type="submit" class="btn btn-success">Upload Comment</button>
                            </div>
                        </form>
                        }
                    </div>
                    <div>
                        @if(action == 0)
                        {
                        <CommentLayout BlogId="@blogId" />
                        }
                        else
                        {
                        <CommentLayout BlogId="@blogId" />
                        }
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
}